{
  "name": "video_search",
  "title": "Video Search",
  "description": "Learn how to search through your video library using Kaltura's API",
  "views": ["media_list", "video_player"],
  "actions": ["list_media"],
  "pages": [{
    "view": "media_list",
    "data": {
      "action": "list_media"
    }
  }],
  "control_sets": [{
    "title": "Authentication",
    "tip": "You can find your info at http://kmc.kaltura.com/index.php/kmc/kmc4#account|integration",
    "affects": "list_media",
    "inputs": [{
      "name": "partnerID",
      "label": "Partner ID",
      "type": "number"
    }, {
      "name": "adminSecret",
      "label": "Admin Secret",
      "type": "text"
    }]
  }, {
    "title": "Search Parameters",
    "affects": "list_media",
    "inputs": [{
      "name": "nameLike",
      "question": "What should the query be?",
      "label": "Query",
      "type": "text"
    }]
  }, {
    "title": "Video Player",
    "affects": "video_player",
    "inputs": [{
