{
  "name": "Kaltura",
  "languages": ["node"],
  "recipes": {
    "likeButton": {
      "label": "Like Button",
      "templates": {
        "client": "like-button",
        "server": ["like", "unlike", "check-like"]
      },
      "questions": [{
        "question": "What video should the button apply to?",
        "type": "text",
        "userInput": true,
        "name": "videoID"
      }, {
        "question": "Do you want an 'unlike' button?",
        "type": "boolean",
        "name": "unlike"
      }]
    },
    "videoPlayer": {
      "label": "Video Player",
      "templates": {
        "client": "video-player",
        "server": []
      },
      "questions": [{
        "name": "videoID",
        "question": "What video should the player be for?",
        "type": "text",
        "userInput": false
      }, {
        "name": "skin",
        "question": "Which skin would you like to use?",
        "type": "enum",
        "values": {
          "KDP3 Dark Skin": "27723522",
          "KDP3 Blue Skin": "27723532",
          "KDP3 Light Skin": "27723542",
          "508 Player": "8704822",
          "Hovering Controls Player": "24666891",
          "Player with Captions": "24666901",
          "Widescreen Player - Light Skin": "24666921",
          "Widescreen Player": "24666881",
          "Player with no share button": "24666871"
        }
      }]
    },
    "mediaList": {
      "label": "Video Search",
      "templates": {
        "client": "media-list",
        "server": "media-list"
      },
      "questions": [{
        "name": "nameLike",
        "question": "What should the query be?",
        "type": "text",
        "userInput": true
      }, {
        "include": "videoPlayer"
      }, {
        "name": "likeButton",
        "question": "Want to include a like button?",
        "type": "boolean",
        "conditionals": {
          "true": [{
            "include": "likeButton",
            "vars": {
              "videoID": ""
            }
          }]
        }
      }]
    }
  }
}
