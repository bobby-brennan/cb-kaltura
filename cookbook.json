{
  "name": "Kaltura",
  "languages": {
    "client": ["html"],
    "server": ["node", "ruby", "php"]
  },
  "setup": {
    "questions": [{
      "question": "OK! I just need some information about your Kaltura account to get started",
      "tip": "You can find your info at http://kmc.kaltura.com/index.php/kmc/kmc4#account|integration",
      "label": "API Keys",
      "type": "form",
      "inputs": [{
        "name": "partnerID",
        "label": "Partner ID",
        "type": "string",
        "required": true
      }, {
        "name": "adminSecret",
        "label": "Admin Secret",
        "type": "string",
        "required": true
      }]
    }]
  },
  "recipes": [{
      "label": "Video Player",
      "actions": [],
      "views": ["video_player"],
      "main": {
        "view": "video_player"
      },
      "questions": [{
        "question": "What video should the player be for?",
        "label": "Video ID",
        "name": "videoID",
        "type": "string"
      }, {
        "question": "Which skin would you like to use?",
        "label": "Skin",
        "name": "skin",
        "type": "enum",
        "choices": [
          {"label": "KDP3 Dark Skin", "value": "27723522"},
          {"label": "KDP3 Blue Skin", "value": "27723532"},
          {"label": "KDP3 Light Skin", "value": "27723542"},
          {"label": "508 Player", "value": "8704822"},
          {"label": "Hovering Controls Player", "value": "24666891"},
          {"label": "Player with Captions", "value": "24666901"},
          {"label": "Widescreen Player - Light Skin", "value": "24666921"},
          {"label": "Widescreen Player", "value": "24666881"},
          {"label": "Player with no share button", "value": "24666871"}
        ]
      }, {
        "question": "Want to include a like button?",
        "label": "Like Button",
        "name": "includeLikeButton",
        "type": "boolean",
        "conditionals": {
          "true": [{
            "include": "likeButton",
            "name": "likeButton",
            "inputs": {
              "videoID": {"inherit": "videoID"},
              "includeVideoPlayer": {"val": true}
            }
          }]
        }
      }]
    }, {
      "label": "Like Button",
      "actions": ["like", "unlike", "check-like"],
      "views": ["like_button", "video_player"],
      "main": {
        "view": "video_player",
        "data": {
          "actions": "get_video"
        }
      },
      "questions": [{
        "question": "What video is the button for?",
        "label": "Video ID",
        "type": "string",
        "name": "videoID",
        "placeholder": "1_eg2xfvy",
        "required": true
      }, {
        "include": "videoPlayer",
        "label": "Video Player",
        "inputs": {
          "videoID": {"answer": "videoID"},
          "includeLikeButton": {"val": true}
        }
      }, {
        "question": "Do you want an 'unlike' button?",
        "label": "Unlike",
        "type": "boolean",
        "name": "includeUnlikeButton"
      }]
    }, {
      "label": "Video Search",
      "actions": ["list_media"],
      "views": ["media_list"],
      "main": {
        "view": "media_list",
        "data": {
          "action": "list_media"
        }
      },
      "questions": [{
        "name": "nameLike",
        "question": "What should the query be?",
        "label": "Query",
        "type": "string",
        "required": true,
        "userInput": true
      }, {
        "include": "videoPlayer",
        "name": "videoPlayer",
        "label": "Video Player",
        "inputs": {
          "videoID": {"serverInput": true}
        }
      }]
    }
  }]
}
